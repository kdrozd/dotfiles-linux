# EXA is the new LS
alias ls='exa'                                                           # ls
alias l='exa -lh'                                                         # list, size, type, git
alias ll='exa -lh'                                                     # long list
alias la='exa --la'                                                      # all list

# speciality views
alias lt='exa --tree --level=2'                                         # tree


# BAT is the new cat

alias cat='bat'
